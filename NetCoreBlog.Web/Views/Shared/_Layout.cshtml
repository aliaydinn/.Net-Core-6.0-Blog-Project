    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Font Awesome Icons -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Mundana/assets/img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" type="image/png" href="~/Mundana/assets/img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.0/css/boxicons.min.css" integrity="sha512-pVCM5+SN2+qwj36KonHToF2p1oIvoU3bsqxphdOIWMYmgr4ZqD3t5DjKvvetKhXGc/ZG5REYTT6ltKfExEei/Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Main CSS -->
    <link href="~/Mundana/assets/css/main.css" rel="stylesheet" />

</head>
<body>

    <nav class="topnav navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style=" font-size:30px; font-family: 'Bebas Neue', sans-serif; letter-spacing:1px;"><strong>Alİ Aydın</strong></a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarColor02" style="">
                <ul class="navbar-nav ml-auto d-flex align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="./about.html" style="color :black; font-family: 'Bebas Neue', sans-serif; letter-spacing:1px; font-size:20px;" ">Hakkımda</a>
                    </li>
                   
                    <li class="nav-item highlight">
                        <a class="nav-link" asp-area="Admin" asp-controller="Auth" asp-action="Login" href="/Admin/Auth/Login" style="height:40px; text-align:center;">Admin Giriş</a>
                    </li>

                </ul>


            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <!--------------------------------------
    HEADER
    --------------------------------------->
    @RenderBody()
    <!--------------------------------------
    FOOTER
    --------------------------------------->
    <div class="container mt-5">
        <footer class="bg-white border-top p-3 text-muted small">
            <div class="row align-items-center justify-content-between">
                <div>
                    <span class="navbar-brand mr-2" style=" color:black;font-family: 'Bebas Neue', sans-serif;"><strong>Ali Aydın</strong></span> Copyright &copy;
                    <script>document.write(new Date().getFullYear())</script>
                    . Tüm hakları saklıdır .
                </div>
               
            </div>
        </footer>
    </div>
    <!-- End Footer -->
    <!--------------------------------------
    JAVASCRIPTS
    --------------------------------------->
    <script src="~/Mundana/assets/js/vendor/jquery.min.js" type="text/javascript"></script>
    <script src="~/Mundana/assets/js/vendor/popper.min.js" type="text/javascript"></script>
    <script src="~/Mundana/assets/js/vendor/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Mundana/assets/js/functions.js" type="text/javascript"></script>

    <!-- Visual Studio Browser Link -->
    <script type="text/javascript" src="/_vs/browserLink" async="async" id="__browserLink_initializationData" data-requestId="baeb0faf90784c98a299879107349a8c" data-requestMappingFromServer="false" data-connectUrl="http://localhost:63139/cc3d1faa2d0d4bc3a573a87369cf767f/browserLink"></script>
    <!-- End Browser Link -->

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
