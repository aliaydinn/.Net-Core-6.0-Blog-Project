@model CategoryAddDto
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-fluid flex-grow-1 container-p-y">
        <div class="alert alert-primary mb-3" style="font-weight:bold;font-size:17px;" role="alert">Kategori Yönetimi — Kategori Ekleme Sayfası</div>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-controller="Category" asp-action="Add" enctype="multipart/form-data" method="post">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label asp-for="Name" for="defaultFormControlInput" class="form-label">Kategori</label>
                                <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kategori alanını doldurunuz" aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Kaydet</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>