@model List<ArticleUndoDelete>
<div class="container-fluid flex-grow-1 container-p-y ">
    <div class="alert alert-dark mb-3" style="font-weight:bold;font-size:17px;" role="alert">Çöp Kutusu — Silinmiş Makaleler</div>
    
    <!-- Basic Bootstrap Table -->
    <div class="card p-lg-5  ">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0" style="padding:15px;">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Silinme Tarihi</th>
                        <th>Silen</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Silinme Tarihi</th>
                        <th>Silen</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <td>@article.Title</td>
                            <td>@article.Category.Name</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedBy</td>
                            <td>@article.DeletedDate.ToShortDateString()</td>
                            <td>@article.DeletedBy</td>
                            <td>@(article.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                <a class="btn rounded-pill btn-dark" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-articleId="@article.Id">
                                    <i class='bx bx-rotate-right'></i>
                                </a>
                                @*<a class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id">
                            <i class='bx bx-trash'></i>
                            </a>*@
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

            
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->


</div>

@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript">


    </script>
}
